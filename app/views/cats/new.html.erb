<h1>New Cat</h1>
<form action="<%= cats_url %>" method="post">
  <!-- <input type="hidden" name="create" value="post"> -->

  <label for="cat_name">Name:</label>
  <input id="cat_name" type="textarea" name="cat[name]" value="">

  <label for="cat_sex_male">Male:</label>
  <input id="cat_sex_male" type="radio" name="cat[sex]" value="M">

  <label for="cat_sex_female">Female:</label>
  <input id="cat_sex_female" type="radio" name="cat[sex]" value="F">

  <label for="cat_color">Select Color:</label>
  <select id="cat_color" name="cat[color]">
    <option value=""></option>
    <option value="white">White</option>
    <option value="black">Black</option>
    <option value="calico">Calico</option>
    <option value="orange">Orange</option>
    <option value="tabby">Tabby</option>
    <option value="grey">Grey</option>
  </select>

  <label for="cat_birth_date">Input Birthdate:</label>
  <input id="cat_birth_date" type = "date" name="cat[birth_date]">

  <label for="cat_description">Tell me about your cat.</label>
  <input id="cat_description" type="textarea" name="cat[description]" value="">

  <!-- <input type="submit" value="Create cat"> -->

  <button type="submit" name="Submit">Submit</button>
</form>
