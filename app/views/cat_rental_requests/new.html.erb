<h1>New Rental Request</h1>
<form action="<%= cat_rental_requests_url %>" method="post">
  <input type="hidden"
         name="<%=request_forgery_protection_token.to_s%>"
         value="<%=form_authenticity_token%>">
         
  <label for="cat_rental_id">Select Cat</label>
  <select id="cat_rental_id" name="cat_rental_request[cat_id]">
    <option value=""></option>
      <% @cats.each do |cat| %>
        <option value="<%= cat.id %>"
          <%= "selected" if @rental_request.cat_id == cat.id %>>
          <%= cat.name %>
        </option>
      <% end %>
  </select>

  <label for="cat_rental_start_date">Input Start Date:</label>
  <input id="cat_rental_start_date"
         type = "date"
         name="cat_rental_request[start_date]"
         value="<%= @rental_request.start_date %>">

  <label for="cat_rental_end_date">Input End Date:</label>
  <input id="cat_rental_end_date"
         type = "date"
         name="cat_rental_request[end_date]"
         value="<%= @rental_request.end_date %>">

  <button type="submit" name="Submit">Submit</button>
</form>
